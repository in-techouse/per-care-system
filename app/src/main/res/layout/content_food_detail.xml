<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.FoodDetailActivity"
    tools:showIn="@layout/activity_food_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingTop="5dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="13dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="name"
            android:textSize="22dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:textColor="@color/colorGray"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:text="type"
            android:textSize="17dp"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="11dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Price"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="11dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Weight"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/colorGray"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorWhite"
                android:id="@+id/qty"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/minusCart"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/qty"
                app:srcCompat="@drawable/ic_action_cart_minus"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/minusCart"
                android:textColor="@color/colorWhite"
                android:id="@+id/quantity"
                android:layout_centerVertical="true"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/plusCart"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/quantity"
                app:srcCompat="@drawable/ic_action_cart_plus"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <Button
                android:textStyle="bold"
                android:text="Add TO Cart"
                android:id="@+id/addToCart"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:text="*Only cash on delivery."
            android:layout_marginTop="17dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingTop="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="*Estimated delivery time is 24 hours"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="*100% refundable"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>